        <TextBlock Height="38" HorizontalAlignment="Left" Margin="10,10,0,0" Name="LoginHeading" Text="Login:" VerticalAlignment="Top" FontSize="20" FontStretch="ExtraCondensed"  Foreground="White" FontWeight="Bold" Width="76" />
